html(lang='ru')
	head
		meta(charset='UTF-8')
		meta(name='viewport', content='width=1350')
		meta(name='description', content='')
		title MinObraz
		// CSS
		link(href='css/normalize.css', rel='stylesheet', media='screen')
		link(href='css/bootstrap-grid.css', rel='stylesheet', media='screen')
